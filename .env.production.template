# ==================================================
# APO-360 - PLANTILLA Configuración PRODUCCIÓN (apo360.net)
# ==================================================
# INSTRUCCIONES:
# 1. Copia este archivo a .env en tu servidor de producción
# 2. Reemplaza los valores marcados con TU_* por tus valores reales
# 3. NUNCA subas el archivo .env real a Git

# ENTORNO
APP_ENV=production
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# BASE DE DATOS - PRODUCCIÓN (Neon PostgreSQL)
DATABASE_URL=postgresql://TU_USUARIO:TU_CONTRASEÑA@TU_HOST_NEON/TU_DATABASE?sslmode=require
PGHOST=TU_HOST_NEON
PGPORT=5432
PGUSER=TU_USUARIO
PGPASSWORD=TU_CONTRASEÑA
PGDATABASE=TU_DATABASE

# AUTENTICACIÓN - Google OAuth
AUTH_MODE=google
SESSION_SECRET=TU_SESSION_SECRET_MUY_SEGURO_DE_64_CARACTERES

# GOOGLE OAUTH (configurar en console.cloud.google.com)
GOOGLE_CLIENT_ID=TU_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=TU_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=https://apo360.net/api/callback
GOOGLE_SCOPES=profile email https://www.googleapis.com/auth/contacts.readonly

# EMAIL (SMTP - usar contraseña de aplicación de Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=TU_EMAIL@gmail.com
SMTP_PASSWORD=TU_APP_PASSWORD

# URLs
PUBLIC_URL=https://apo360.net

# LOGGING
LOG_LEVEL=info
