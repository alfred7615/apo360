# ==================================================
# APO-360 - Configuración DESARROLLO (Replit)
# ==================================================
# Este archivo se usa en el entorno de desarrollo (Replit)
# Copia a .env en Replit

# ENTORNO
APP_ENV=development
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# BASE DE DATOS - DESARROLLO
# IMPORTANTE: Usar una base de datos SEPARADA de producción
DATABASE_URL=postgresql://usuario:contraseña@host/apo360_dev?sslmode=require
PGHOST=tu_host_neon_dev
PGPORT=5432
PGUSER=neondb_owner
PGPASSWORD=tu_contraseña_dev
PGDATABASE=apo360_dev

# AUTENTICACIÓN - Replit Auth
AUTH_MODE=replit
SESSION_SECRET=tu_session_secret_desarrollo
ISSUER_URL=https://replit.com/oidc

# EMAIL (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password

# LOGGING
LOG_LEVEL=debug
