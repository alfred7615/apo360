# ==================================================
# APO-360 - Variables de Entorno
# ==================================================
# Copia este archivo como .env y completa los valores
# Para desarrollo: usa .env.replit como referencia
# Para producción: usa .env.production como referencia

# --------------------------------------------------
# ENTORNO
# --------------------------------------------------
# Valores: development | production
APP_ENV=development
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# --------------------------------------------------
# BASE DE DATOS - DESARROLLO (Replit)
# --------------------------------------------------
# Usa una base de datos Neon separada para desarrollo
DATABASE_URL_DEV=postgresql://usuario:contraseña@host/apo360_dev?sslmode=require
PGHOST_DEV=
PGPORT_DEV=5432
PGUSER_DEV=
PGPASSWORD_DEV=
PGDATABASE_DEV=apo360_dev

# --------------------------------------------------
# BASE DE DATOS - PRODUCCIÓN (apo360.net)
# --------------------------------------------------
DATABASE_URL_PROD=postgresql://usuario:contraseña@host/apo360?sslmode=require
PGHOST_PROD=
PGPORT_PROD=5432
PGUSER_PROD=
PGPASSWORD_PROD=
PGDATABASE_PROD=apo360

# Para compatibilidad (se usan si no hay _DEV/_PROD)
DATABASE_URL=
PGHOST=
PGPORT=5432
PGUSER=
PGPASSWORD=
PGDATABASE=

# --------------------------------------------------
# AUTENTICACIÓN
# --------------------------------------------------
# Valores: replit | google
# En desarrollo se usa 'replit', en producción 'google'
AUTH_MODE=replit
SESSION_SECRET=genera_una_clave_segura_de_al_menos_32_caracteres

# --------------------------------------------------
# GOOGLE OAUTH (solo producción)
# --------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://apo360.net/api/callback
GOOGLE_SCOPES=profile email https://www.googleapis.com/auth/contacts.readonly

# --------------------------------------------------
# REPLIT AUTH (solo desarrollo)
# --------------------------------------------------
ISSUER_URL=https://replit.com/oidc
REPL_ID=

# --------------------------------------------------
# EMAIL (SMTP)
# --------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# --------------------------------------------------
# URLS
# --------------------------------------------------
PUBLIC_URL=http://localhost:5000

# --------------------------------------------------
# LOGGING
# --------------------------------------------------
LOG_LEVEL=info
